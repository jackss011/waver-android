<resources>

    <!-- Base application theme -->
    <style name="Theme.Waver" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextAppearance.Waver.CardTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ddd</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="Widget.Waver.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="iconSize">24dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="rippleColor">#333</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Widget.Waver.PopupMenu" parent="@style/Widget.MaterialComponents.PopupMenu">
        <!--        <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearance.Waver.CardTitle</item>-->
        <item name="android:textColor">@color/textPopup</item>
        <item name="android:iconTint">@color/textPopup</item>

    </style>

</resources>


